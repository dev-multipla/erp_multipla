/* FeedForm.css */
feed-form {
    display: flex; /* Usamos flexbox para organizar os cards */
    flex-wrap: wrap; /* Permite que os cards quebrem a linha */
    justify-content: space-between; /* Distribui os cards com espaço entre eles */
  }
  
  
